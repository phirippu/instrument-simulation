<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<!DOCTYPE gdml [ <!ENTITY materials SYSTEM "materials.xml"> ]>
<gdml xmlns:xs="http://www.w3.org/2001/XMLSchema-instance" xs:noNamespaceSchemaLocation="../schema/gdml.xsd">

    <!--################################ Variables ##################################################-->

    <define>

        <variable name="SiT" value="0.5" />
        <variable name="ShieldT" value="1" />

    </define>

    <!--################################ Materials ##################################################-->

    &materials;

    <!--################################ Solids ##################################################-->


    <solids>
        <!--World-->
        <box name="WorldBox" x="100" y="100" z="100" />

         <!--The sensitive silicon chip -->
        <box name="SiChip" x="100" y="100" z="SiT" />
        <!-- 100mm * 100mm * 0.5mm = 0.5 mm³ -->
        <!-- 8.960 g/cm³ * 0.5mm³ = 4.48 milligrams = 4.48e-6 kg -->

        <!--Shield -->
        <box name="AluShield" x="100" y="100" z="ShieldT" />


    </solids>


    <!--################################ Volumes ##################################################-->

    <structure>



        <volume name="Sivol" >
            <materialref ref="Silicon" />
            <solidref ref="SiChip" />
            <auxiliary auxtype="SensDet" auxvalue="Tracker"/>
            <auxiliary auxtype="Color" auxvalue="Blue"/>
        </volume>

        <volume name="AluShieldVol" >
            <materialref ref="Aluminum" />
            <solidref ref="AluShield" />
        </volume>


        <!--################################ World ##################################################-->

        <volume name="World" >
            <materialref ref="Vacuum" />
            <solidref ref="WorldBox" />


            <physvol>
                <volumeref ref="Sivol" />
                <position name="Sipos" x="0" y="0" z="SiT/2" />
            </physvol>

            <physvol>
                <volumeref ref="AluShieldVol" />
                <position name="ShieldPos" x="0" y="0" z="-ShieldT/2" />
            </physvol>

        </volume>
    </structure>

    <setup name="Default" version="1.0" >
        <world ref="World" />
    </setup>
</gdml>